@model IEnumerable<NZWalks.UI.Models.DTO.RegionDTO>

@{
}

<h1 class="mt-3">Regions</h1>

<div class="d-flex justify-content-end">
    <a class="btn btn-secondary" asp-controller="Regions" asp-action="Add">Add Region</a>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th class="px-3">Id</th>
            <th class="px-3">Code</th>
            <th class="px-3">Name</th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
    @foreach (var walk in Model)
    {
        <tr>
            <td class="px-3">@walk.Id</td>
            <td class="px-3">@walk.Code</td>
            <td class="px-3">@walk.Name</td>
            <td>
                <a class="btn btn-light" asp-controller="Regions"  asp-action="Edit" asp-route-id="@walk.Id">Edit</a>
            </td>
        </tr>
    }
  </tbody>
</table>
